{
  "compilerOptions": {
    "outDir": "aot",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "node_modules/*",
    "src/main.aot.ts",
    "aot/"
  ],

  "angularCompilerOptions": {
    "genDir": "./aot",
    "skipMetadataEmit" : true,
    "debug": true
  }
}
